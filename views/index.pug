extends layout

block content
	.jumbotron
		h1.display-4 Bienvenue
		p.lead Ci-dessous, les produits actuellement disponible
	.row
		each product in products
			.col-sm-6.col-md-4
				.card
					img(src=product.image, alt=product.name).card-img-top
					.card-body
						h3.card-title= product.name
						h5
							| Prix: 
							span.badge.badge-pill.badge-dark #{product.price}â‚¬ 
						hr
						a(href="/produit/"+product.id).btn.btn-outline-dark.btn-sm Voir le produit